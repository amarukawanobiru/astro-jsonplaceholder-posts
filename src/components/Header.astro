---
import Navigation from "./Navigation.astro";
import { Image } from "astro:assets";
import localHeaderLogo from "../assets/logo.svg";
---

<header class="header">
  <div class="header__inner inner">
    <a class="header__logo" href="/">
      <Image class="header__logo__image" src={ localHeaderLogo } alt="JSONPlaceholder Posts" />
    </a>
    <div class="global-navigation">
      <Navigation />
    </div>
    <button class="burger" aria-label="Burger toggle button">
      <span class="burger__bar"></span>
      <span class="burger__bar"></span>
      <span class="burger__bar"></span>
    </button>
  </div>
</header>

<style lang="scss">
  @use "../styles/colors" as *;

  .header {
    border-bottom: 1px solid $color-text;
    
    &__inner {
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;

      &::after {
        content: "";
        width: 100%;
        border-top: 1px solid $color-text;
        position: absolute;
        bottom: 2px;
        left: 0;
      }
    }

    &__logo {
      display: block;
      width: 240px;
    }

    .burger {
      width: 32px;
      display: none;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 4px 0;

      &__bar {
        width: 100%;
        border-bottom: 4px solid $color-text;
        display: block;
      }
    }

    @media screen and (max-width: 768px) {
      .header__logo {
        width: calc(88% - 32px);
      }

      .global-navigation {
        display: none;
      }

      .burger {
        display: flex;
      }
    }
  }
</style>